<root BTCPP_format="4">
  <BehaviorTree ID="recovery_aas">
    <Sequence>
      <error_count/>
      <IfThenElse>
        <notPickGoalLocation/>
        <Fallback>
          <Sequence>
            <isRobotOrGoalAtBCS/>
            <Sequence>
              <recovery_arrive_BWS/>
              <RetryUntilSuccessful num_attempts="3">
                <drop_cart/>
              </RetryUntilSuccessful>
              <RetryUntilSuccessful num_attempts="3">
                <go_home/>
              </RetryUntilSuccessful>
            </Sequence>
          </Sequence>
          <Sequence>
            <isRobotOrGoalAtADS/>
            <recovery_arrive_BWS/>
            <RetryUntilSuccessful num_attempts="3">
              <drop_cart/>
            </RetryUntilSuccessful>
            <RetryUntilSuccessful num_attempts="3">
              <go_home/>
            </RetryUntilSuccessful>
          </Sequence>
        </Fallback>
        <go_home/>
      </IfThenElse>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="recovery_einschalten/ladeprozess">
    <SubTree ID="action_go_home"
             _skipIf="failed_robot_action!=&quot;&quot;"
             _autoremap="true"/>
  </BehaviorTree>

  <BehaviorTree ID="recovery_pc">
    <Sequence>
      <error_count/>
      <isAssertLiftDown/>
      <RetryUntilSuccessful num_attempts="3">
        <go_home/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="recovery_plugin">
    <Sequence>
      <SubTree ID="action_battery_end_ladeprozess"
               _autoremap="true"/>
      <error_count/>
      <isArmFree/>
      <recovery_arrive_BWS/>
      <RetryUntilSuccessful num_attempts="3">
        <drop_cart/>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <go_home/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="recovery_plugout">
    <Sequence>
      <error_count/>
      <isArmFree/>
      <RetryUntilSuccessful num_attempts="3">
        <drop_cart/>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <go_home/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="drop_cart"
            editable="true"/>
    <Action ID="error_count"
            editable="true"/>
    <Action ID="go_home"
            editable="true"/>
    <Condition ID="isArmFree"
               editable="true"/>
    <Condition ID="isAssertLiftDown"
               editable="true"/>
    <Condition ID="isRobotOrGoalAtADS"
               editable="true"/>
    <Condition ID="isRobotOrGoalAtBCS"
               editable="true"/>
    <Condition ID="notPickGoalLocation"
               editable="true"/>
    <Action ID="recovery_arrive_BWS"
            editable="true"/>
  </TreeNodesModel>

</root>
